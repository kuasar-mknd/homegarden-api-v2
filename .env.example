# Application
NODE_ENV=development
PORT=3000
CORS_ORIGINS=*

# Database
# Connect to your local postgres container (credentials match docker-compose.yml)
DATABASE_URL=postgresql://user:password@localhost:5432/homegarden

# Supabase Auth (Required)
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-publishable-key
# SUPABASE_SECRET_KEY=your-service-role-key # Optional, for admin tasks

# JWT (Legacy/Fallback)
# JWT_SECRET=super-secret-key-at-least-32-chars-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google Gemini AI (Required for PlantID/DrPlant)
# Get key from: https://aistudio.google.com/
GOOGLE_AI_API_KEY=your-gemini-api-key
GEMINI_IDENTIFICATION_MODEL=gemini-2.0-flash
GEMINI_DIAGNOSIS_MODEL=gemini-2.5-pro-preview-06-05

# PlantNet API (Fallback - Optional)
PLANTNET_API_KEY=your-plantnet-key

# Weather (OpenMeteo)
WEATHER_API_BASE_URL=https://api.open-meteo.com/v1

# Storage (Optional)
STORAGE_BUCKET=your-storage-bucket

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=350
