# Application
NODE_ENV=development
PORT=3000
CORS_ORIGINS=*

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/homegarden"

# Supabase Auth (Required)
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_PUBLISHABLE_KEY="your-anon-key"
# SUPABASE_SECRET_KEY="your-service-role-key"

# JWT (Optional/Fallback)
# JWT_SECRET="super-secret-key-at-least-32-chars-long"
# JWT_EXPIRES_IN="1h"

# Google Gemini AI (Required for Plant ID & Diagnosis)
GOOGLE_AI_API_KEY="your-google-ai-key"
# GEMINI_IDENTIFICATION_MODEL="gemini-2.0-flash"
# GEMINI_DIAGNOSIS_MODEL="gemini-2.5-pro-preview-06-05"

# PlantNet API (Optional Fallback)
# PLANTNET_API_KEY=""

# Weather API
WEATHER_API_BASE_URL="https://api.open-meteo.com/v1"

# Storage
# STORAGE_BUCKET="homegarden-uploads"

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=350
