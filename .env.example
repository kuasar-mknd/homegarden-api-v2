# ================================================
# HomeGarden API v2 - Environment Configuration
# ================================================

# Application
NODE_ENV=development
PORT=3000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/homegarden

# Supabase Auth (if using Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_PUBLISHABLE_KEY=your-publishable-key
SUPABASE_SECRET_KEY=your-secret-key

# JWT (fallback if not using Supabase)
JWT_SECRET=your-super-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google Gemini AI
GOOGLE_AI_API_KEY=your-gemini-api-key
GEMINI_IDENTIFICATION_MODEL=gemini-2.0-flash
GEMINI_DIAGNOSIS_MODEL=gemini-2.5-pro-preview-06-05

# PlantNet API (for plant identification - fallback)
PLANTNET_API_KEY=your-plantnet-api-key

# Weather API
WEATHER_API_BASE_URL=https://api.open-meteo.com/v1

# File Storage (Supabase Storage bucket)
STORAGE_BUCKET=plant-images

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=350
